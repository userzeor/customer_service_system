/* 主题样式文件 */

/* 覆盖样式 */
.wrapper
  height 100%
  background: #FAFAFA
  .chat-wrapper
    position: relative;
    height: 100%;
    .chat-box
      position: absolute
      top: 38px
      bottom: 50px
      left 0
      right 0
      .chat-text-box
        padding-bottom: 15px
        .cube-scroll-wrapper
        >>>.cube-scroll-content 
            padding-bottom: 15px;
        // >>>.cube-scroll-list-wrapper
        .customer-box
          display: flex
          margin-top: 15px
          float left
          min-width: 75%;
          max-width: 75%;
          padding-left: 10px
          .c-adv-img
            margin-top: 5px
            max-width 30px
            border-radius: 50%
            align-self: flex-start;
            box-shadow: 0 2px 2px rgba(0,0,0,.3);
          .c-box
            margin-left: 10px
            .c-name
              padding: 5px 0 5px 0
              text-align: left 
              font-size: 12px
            .c-text
              padding: 10px 16px
              font-size: 14px
              border-radius: 0 20px 20px 20px;
              box-shadow: 0 5px 10px rgba(0,0,0,.06);
              word-break: break-all
              text-align: justify
              line-height: 1.2
              background: #fff;
              .matter-type-div
                padding: 10px 0  
        .mine-box
          float right
          min-width: 75%;
          max-width: 75%;
          display: flex
          margin-top: 15px
          padding-right: 10px
          justify-content flex-end
          .m-adv-img
            margin-top: 5px
            width 30px
            height 30px
            border-radius: 50%
            align-self: flex-start;
            box-shadow: 0 2px 2px rgba(0,0,0,.3);
          .m-box
            margin-right: 10px
            .m-name
              padding: 5px 0 5px 0
              text-align: right  
              font-size: 12px
            .m-text
              padding: 10px 16px
              font-size: 14px
              border-radius: 20px 0 20px 20px;
              box-shadow: 0 5px 10px rgba(0,0,0,.06);
              background: #fff;
    .chat-footer
      position: absolute
      padding: 5px 0 5px 5px
      left 0
      right 0
      bottom: 0
      display: flex
      align-items: center
      background: #ffffff
      z-index 10
      .cube-textarea-wrapper
        flex-grow: 1
      .cube-textarea_expanded
        height 40px
      >>>.cube-textarea
          font-size: 14px
          background: #fafafa
      .cube-btn
        margin-left: 5px
        margin-right: 5px
        padding: 0
        width 60px
        height 30px
        font-size: 12px
        border-radius: 3px
      
      